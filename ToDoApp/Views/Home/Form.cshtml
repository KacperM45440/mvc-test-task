@{
    ViewBag.Title = "Select Year";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Save", "Home", FormMethod.Post))
{
    <fieldset>
        @Html.DropDownList("Years", (IEnumerable<SelectListItem>)ViewBag.Years)
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}